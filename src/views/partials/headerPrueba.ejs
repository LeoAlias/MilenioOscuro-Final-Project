                              <a class="navek loslinks" href="/admin" >
                                <span> <%= usuario.username %> 
                                </span><!-- </i> -->
                                </a>
                           <% } else { %>
                               <a class="navek loslinks" href="/users/profile" >
                          <span> <%= usuario.username %> 
                          </span>
                          </a>
                               
                          <% } %>
                          
                          <% } %> 
                                    
                        <% if ( prodEnCarrito > 0){ %>

                    <a class="navek loslinks" href="/cart"><i class="fas fa-shopping-cart d-flex justify-content-center align-items-center "> <span> Carrito
                        </span><span id="iconoProdEnCarrito" class="badge badge-danger"><%= prodEnCarrito %> </span></i></a>
                        <% } else { %>

                        <a class="navek loslinks" href="/cart"><i class="fas fa-shopping-cart d-flex justify-content-center align-items-center "> <span> Carrito
                        </span></i></a>
                        <% } %>


                        <div  id="main">
                            <button class="openbtn " onclick="openNav()"><i id="menuTablet" style="font-size: 24px;"
                                class="fas fa-bars d-flex justify-content-center align-items-center"></i> </button>  
                       
                    
                    </div>
                </div>

            </div>

                     <div id="busqSoloDestk" class="row  d-flex justify-content-center">
