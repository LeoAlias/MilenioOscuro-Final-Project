                        <% if ( usuario == undefined){ %>
                            <a class="navek loslinks" href="/users/login">
                              <i class="fas fa-user d-flex justify-content-center align-items-center ml-5 ">
                            <span id="miCuenta"> Mi cuenta
                              </span></i>
                            </a>
                   <% } else { %>
                        
                          <img id="iconoAvatar" class="ml-5" src="/images/avatars/<%= usuario.avatar %> " alt="">
