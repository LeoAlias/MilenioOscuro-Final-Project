        <div  id="carouselExampleIndicators" class="carousel slide mb-4 d-noneCel smallerImg4k" data-ride="carousel">
          <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
          </ol>
          <div class="carousel-inner" role="listbox">
            <div class="carousel-item active">
              <img class="d-block bannerImg" src="/images/carousel/boardGamesbanner.png" alt="First slide">
            </div>
            <div class="carousel-item">
              <img class="d-block bannerImg" src="/images/carousel/comicBanner.jpg" alt="Second slide">
            </div>
            <div class="carousel-item">
              <img class="d-block bannerImg" src="/images/carousel/the_last_of_us_2_now_available_web_banner_1.jpg" alt="Third slide">
            </div>
          </div>
          <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span style="z-index: -1;" class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>

        <img class= "onlyMobile" src="https://i.pinimg.com/originals/e9/9f/3a/e99f3a82d2370506419d45061350132d.jpg" style="width:100%">
<!-- titulo -->
        <div>
          <h1 class= "mobile_smallerTxt" id="bienvenida">MILENIO OSCURO COMICS & GAMES
          </h1>
          <hr class="rounded wid_70">
        </div>
 <!-- termina titulo -->
        <div class="container">

          <div class="row">
      
      
            
      
            <div class="col-lg-9">

             <!--  <div style="font-size: 32px;" class="d-flex justify-content-center mb-5">¡Lo mas recomendado!</div> -->

        
        <div class="row onlyMobilePadT">

          <% products.forEach(product => { %>
          
          <div class="col-lg-3 col-md-6 mb-4 ">
            <div class="card h-100" style="height: 84%!important;">
              <div style="height: 78%;">
              <a href="/products/detail/<%= product.id %>"><img  class="card-img-top prodImg" style="height: 100%;" src="/images/<%= product.image %>" alt=""></a>
            </div>
              <div  class="card-body" style="padding: 8px;border-top: 1.1px solid #eee;">
                <h4 class="card-title">
                  <a style="font-size: 17px;color: black;" href="/products/detail/<%= product.id %>"><%= product.name %></a>
                </h4>
                <% if (product.offer == "on")  { %> 
                <h5 style="float: left;font-size: 24px;">$<%= toThousand(product.newprice) %></h5>
                <div class="d-flex justify-content-end">
                <span class="badge badge-success">¡Oferta!</span>
              </div>
                <% } else { %>
                  <h5 style="font-size: 24px;">$<%= toThousand(product.price) %></h5>
                  <% }%>
              </div>
             
            </div>
          </div>

          <% }) %>

        </div>
        <!-- /.row -->

      </div>
      <!-- /.col-lg-9 -->

    </div>


    <!-- /.row -->
    
   
      
<div class="d-flex justify-content-center small_txt smaller_txt smallest_txt">



        <nav aria-label="Page navigation example">
          <ul class="pagination">
            <li class="page-item page-link"><a href="<%= pagination.firstUrl %>"><<</a></li>
            <li class="page-item page-link">
              <% if (page != "0" && (page)) { %>
              <a href="<%= pagination.prevUrl %>">
                <% }%>
                 < Atras</li></a>

                 

                 <% for (let i = 0 ; i <= lastPage ; ++i) { %>
                  <% if( page == i){ %>

                    <li class="page-item active"><a class="page-link" href="?page=<%= i %>" > <%= i +1  %></a></li>
                  <% } else { %>
                    <li class="page-item"><a class="page-link" href="?page=<%= i %>" > <%= i +1  %></a></li>
                    <% } %> 
                  
                  <%  } %>

            <li class="page-item page-link">
              <% if (page != lastPage) { %>
              <a href="<%= pagination.nextUrl %>">
                <% }%>
              Siguiente ></li></a>
            <li class="page-item page-link"><a href="<%= pagination.lastUrl %>">>></a></li>
          </ul>
        </nav>
      </div>

     
      

  </div>
  <!-- /.container -->

  <!-- Footer -->
  <%- include('../partials/footerPrueba') %>

  <!-- Bootstrap core JavaScript -->
 
  <script src="/javascripts/jquery.min.js"></script>
  <script src="/javascripts/bootstrap.bundle.min.js"></script>
  
  
</body>

